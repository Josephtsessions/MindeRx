<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#7e7e7e"
    tools:context="com.example.minderx.PatientTemperatureActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/submit_bn"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/staff_name_label_patient_sa02"
        android:layout_below="@+id/Temperature_Num"
        android:layout_marginTop="80dp"
        android:background="#3300FF"
        android:text="@string/submit"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/Temperature_Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staff_name_label_patient_sa02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/temperature" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/staff_name_label_patient_sa02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/temperature"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/patient_name_label_patient_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staff_name_label_patient_temperature"
        android:layout_alignLeft="@+id/staff_name_label_patient_temperature"
        android:text="@string/patient_name_placeholder" />
    
    <TextView
        android:id="@+id/staff_name_label_patient_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="16dp"
        android:text="@string/staff_name_placeholder" />

</RelativeLayout>