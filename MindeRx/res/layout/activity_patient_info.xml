<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7e7e7e" >

    <ListView
        android:id="@+id/patient_info_listView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/logout_bn"
        android:layout_marginTop="17dp" >

    </ListView>

    <Button
        android:id="@+id/logout_bn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#3300FF"
        android:text="Log Out" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_info_listView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Graph Patient Info" />

    <EditText
        android:id="@+id/PatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logout_bn"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>