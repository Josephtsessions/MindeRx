<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7e7e7e"
    tools:context="com.example.minderx.PatientInfoActivity" 
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/logout_bn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#3300FF"
        android:text="@string/log_out" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/graph_patient_info" />

    <Button
        android:id="@+id/heart_rate_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blood_pressure_bn"
        android:layout_alignRight="@+id/blood_pressure_bn"
        android:layout_below="@+id/blood_pressure_bn"
        android:layout_marginTop="16dp"
        android:text="@string/heart_rate" />

    <Button
        android:id="@+id/o2_sat_lvl_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/heart_rate_bn"
        android:layout_alignRight="@+id/heart_rate_bn"
        android:layout_below="@+id/heart_rate_bn"
        android:layout_marginTop="15dp"
        android:text="@string/o2_stat_lvls" />

    <Button
        android:id="@+id/temperature_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/o2_sat_lvl_bn"
        android:layout_alignRight="@+id/o2_sat_lvl_bn"
        android:layout_below="@+id/o2_sat_lvl_bn"
        android:layout_marginTop="19dp"
        android:text="@string/temperature" />

    <Button
        android:id="@+id/blood_pressure_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout_bn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/blood_pressure" />
    
    <TextView
        android:id="@+id/patient_name_label_patient_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staff_name_label_patient_info"
        android:layout_alignLeft="@+id/staff_name_label_patient_info"
        android:text="@string/patient_name_placeholder" />
    
    <TextView
        android:id="@+id/staff_name_label_patient_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="16dp"
        android:text="@string/staff_name_placeholder" />

</RelativeLayout> 