<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#7e7e7e" >

    <EditText
        android:id="@+id/Patient_Name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#3300FF" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/SaO2_Level"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Patient_Name_txt"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:text="@string/heart_rate"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/submit_bn"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/SaO2_Level"
        android:layout_marginBottom="16dp"
        android:background="#3300FF"
        android:text="@string/submit"
        android:textSize="25sp" />

    <Button
        android:id="@+id/cancel_bn"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/submit_bn"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:background="#FF0000"
        android:text="@string/cancel"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SaO2_Level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:inputType="date"
        android:text="@string/dummy_date" />

    <EditText
        android:id="@+id/Temperature_Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/systolicField"
        android:layout_below="@+id/systolicField"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/heart_rate_num" />

    <EditText
        android:id="@+id/systolicField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_txt"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="time"
        android:text="@string/dummy_time" />

</RelativeLayout>