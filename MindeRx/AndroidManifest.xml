        </activity>
        <activity
            android:name="com.example.minderx.PatientSaLevelActivity" >
        </activity>
        <activity
            android:name="com.example.minderx.GraphPatientInfoActivity" >
        </activity>
        <activity
            android:name="com.example.minderx.ManagePatientsActivity" >
        </activity>
        <activity
            android:name="com.example.minderx.PatientTemperatureActivity" >
